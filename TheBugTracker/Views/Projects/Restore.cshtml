@model TheBugTracker.Models.Project

@{
    ViewData["Title"] = "Restore";
}

<!-- Sidebar-right-->
<div class="sidebar sidebar-right sidebar-animate">
    <div class="panel panel-primary card mb-0 box-shadow">
        <div class="tab-menu-heading border-0 p-3">
            <div class="card-title mb-0">Settings</div>
            <div class="card-options ms-auto">
                <a class="sidebar-remove"><i class="fe fe-x"></i></a>
            </div>
        </div>
        <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
            <div class="tabs-menu ">
                <!-- Tabs -->
                <ul class="nav panel-tabs">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                    <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                </ul>
            </div>
            <div class="tab-content">
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="card ms-1 me-1">
        <div class="ms-3 ms-lg-4 me-3">
            <h2 class="mt-2">Restore</h2>
            <h3 class="">Are you sure you want to restore this project?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageFileName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageFileName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageFileData)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.ImageFileData != null)
                    {
                        <img style="width:60px; height:60px" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageFileData))" alt="" />
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageContentType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageContentType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Archived)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Archived)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Company.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Company.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProjectPriority)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProjectPriority.Name)
                </dd>
            </dl>
            <form asp-action="Restore">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Restore" class="btn btn-success" />
            </form>
            <div class="mt-3 mb-3">
                <a asp-action="AllProjects" asp-controller="Projects" class="mb-3 pb-3">Back to all Projects</a>
            </div>
        </div>

    </div>
</div>